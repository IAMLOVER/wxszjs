<script>
  import wepy from 'wepy';
  import path from '../../common/path.js'
  import mywxs from '../../wxs/mywxs.wxs';
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '商品详情'
    };
    onLoad(options) {
      var that = this;
      that.isIphoneX = that.$parent.globalData.isIphoneX
      // 查看是否授权
      wx.getSetting({
        success: function(res) {
          if (res.authSetting['scope.userInfo']) {} else {
            wx.redirectTo({
              url: '/pages/authorize/authorize'
            })
          }
        }
      })
      console.log(options)
      //商品id
      this.produceId = options.id
      //userTargetId
      this.userTargetId = options.userTargetId
      this.getProduceInfo()
    }
    data = {
      isIphoneX: false,
      showShadow: false,
      imagePath: path.path.imagePath,
      apiPath: path.path.apiPath,
      preImagePath: path.path.preImagePath,
      produceId: '',
      produceInfo: {},
      goodsClassList: {},
      maxPrice: '',
      minPrice: '',
      storeId: '',
      userTargetId: '',
      activeIndex: 0,
      typeId: '',
      account: 1,
      money: 0,
      storePhoneNum: ''
    };
    wxs = {
      m1: mywxs
    };
    methods = {
      onShareAppMessage: function(ops) {
        if (ops.from === 'button') {
          // 来自页面内转发按钮
          console.log(ops.target)
        }
        return {
          title: this.produceInfo.relay ? this.produceInfo.relay : '我发现了一个超值好物，快来看看啊',
          imageUrl: this.produceInfo.cover ? this.preImagePath + this.produceInfo.cover : this.preImagePath + this.produceInfo.picUrl1,
          success: function(res) {
            // 转发成功
            console.log("转发成功:" + JSON.stringify(res));
          },
          fail: function(res) {
            // 转发失败
            console.log("转发失败:" + JSON.stringify(res));
          }
        }
      },
      call() {
        wx.makePhoneCall({
          phoneNumber: this.storePhoneNum
        });
      },
      openShadow() {
        this.showShadow = true;
      },
      closeShadow() {
        this.showShadow = false;
      },
      //选规格
      changeIndex(e) {
        console.log(e)
        this.activeIndex = e.currentTarget.dataset.index
        this.money = this.account * this.goodsClassList[this.activeIndex].salPrice * 0.01
        this.typeId = e.currentTarget.dataset.id
      },
      // 加
      addAccount() {
        if (this.account >= this.goodsClassList[this.activeIndex].stock) {
          wx.showToast({
            title: '库存不足',
            icon: 'none',
            duration: 2000,
            mask: true,
            success: res => {}
          })
        } else {
          this.account++
            this.money = this.account * this.goodsClassList[this.activeIndex].salPrice * 0.01
        }
      },
      //减
      reduceAccount() {
        if (this.account > 1) {
          this.account--
            this.money = this.account * this.goodsClassList[this.activeIndex].salPrice * 0.01
        } else {
          wx.showToast({
            title: '请选择最少数量',
            icon: 'none',
            duration: 2000,
            mask: true,
            success: res => {}
          });
        }
      },
      //购买数量的确定按钮
      payMoney() {
        if (this.account <= 0) {
          wx.showToast({
            title: '请选择最少数量',
            icon: 'none',
            duration: 2000,
            mask: true,
            success: res => {}
          });
        } else {
          var pay = {}
          pay.collocationId = null
          // 商品规格id
          pay.id = this.typeId
          // 商品数量
          pay.count = this.account
          // 商品活动类型
          pay.type = 0
          // 商品活动id
          pay.targetId = this.userTargetId
          //优惠券id
          pay.couponId = null
          // 商品的价钱
          pay.money = this.money
          wx.setStorage({
            key: 'pay',
            data: pay
          })
          this.getUserAddress()
        }
      }
    };
    // 获取商品详情
    getProduceInfo() {
      var that = this
      wepy.showLoading({
        title: '加载中', //提示的内容,
        mask: true, //显示透明蒙层，防止触摸穿透,
        success: res => {}
      })
      wx.request({
        url: that.apiPath + '/szmktstore/goodsInfo/' + that.produceId,
        method: 'get',
        data: {
          'userid': that.$parent.globalData.userId
        },
        dataType: 'json',
        success: res => {
          console.log(res)
          that.produceInfo = res.data.data.goods
          that.produceInfo.description = that.produceInfo.description.replace(/\<img/g, '<img style="width:100%;height:auto;display:block"');
          that.goodsClassList = res.data.data.goods.goodsClass
          that.typeId = that.goodsClassList[0].id
          that.money = that.account * that.goodsClassList[0].salPrice * 0.01
          // 店铺id
          that.storeId = res.data.data.goods.storeId
          that.$apply()
          that.getStorePhone()
          wepy.hideLoading()
        },
        fail: () => {},
        complete: () => {}
      });
    };
    // 获取用户的地址
    getUserAddress() {
      var that = this
      wx.request({
        url: that.apiPath + '/szmktuser/user/getaddress',
        data: {
          userid: that.$parent.globalData.userId,
        },
        method: 'GET',
        dataType: 'json',
        success: res => {
          console.log(res)
          if (res.data.data) {
            wx.setStorage({
              key: 'addressId',
              data: res.data.data.id
            });
            that.$navigate({
              url: '../order/order'
            })
          } else {
            that.$navigate({
              url: '../address/address'
            })
          }
          that.$apply()
        },
        fail: () => {},
        complete: () => {}
      });
    }
    //获取商店的服务电话
    getStorePhone() {
      var that = this
      wx.request({
        url: that.apiPath + '/szmktstore/storeInfo/serviceTel',
        data: {
          storeId: that.storeId
        },
        method: 'GET',
        dataType: 'json',
        success: res => {
          console.log(res)
          that.storePhoneNum = res.data.data
          that.$apply()
        },
        fail: () => {},
        complete: () => {}
      });
    }
  }
</script>
